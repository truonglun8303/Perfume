@model IEnumerable<ShopNuocHoa.Models.EF.Banner>


<style>
    .carousel {
        padding-top: 90px;
    }

    .carousel-item {
        position: relative;
        width: 100%;
        height: 66.67vh; /* 2/3 of the viewport height */
        transition: transform 1.5s ease-in-out; /* Smooth transition */
    }

        .carousel-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .carousel-caption {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }
</style>
